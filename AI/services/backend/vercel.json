{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "api/**/*.py": {
      "maxDuration": 60,
      "memory": 1024,
      "excludeFiles": "{tests/**,__tests__/**,**/*.test.py,**/test_*.py,__pycache__/**,*.pyc}"
    }
  },
  "rewrites": [
    { "source": "/v1/:path*", "destination": "/api/app" },
    { "source": "/health", "destination": "/api/app" },
    { "source": "/docs", "destination": "/api/app" },
    { "source": "/redoc", "destination": "/api/app" },
    { "source": "/openapi.json", "destination": "/api/app" },
    { "source": "/", "destination": "/api/app" }
  ]
}
