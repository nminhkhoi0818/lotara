# Postgres container settings
POSTGRES_USER=lotara
POSTGRES_PASSWORD=lotara
POSTGRES_DB=lotara
POSTGRES_PORT=5432

# Host that the Nest app will use to reach Postgres
POSTGRES_HOST=localhost

# Optional pgAdmin credentials (only used if you run the pgadmin service)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=admin

# Shared connection string for ORMs (TypeORM/Prisma/etc.)
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# Google Gemini API Key
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here
